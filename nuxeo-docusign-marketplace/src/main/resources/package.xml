<!-- See documentation at http://doc.nuxeo.com/x/HgIz -->
<package type="addon" name="nuxeo-docusign" version="@VERSION@">
  <title>Nuxeo Docusign</title>
  <description>
    <p>This plugin provides an integration between the Nuxeo Platform and <a href="https://docusign.com">DocuSign</a>.
      Documents are seamlessly sent to DocuSign for electronic signature.
      The plugin also supports DocuSign webhooks.</p>
  </description>
  <home-page>https://github.com/nuxeo-sandbox/nuxeo-docusign</home-page>
  <vendor>Nuxeo</vendor>
  <nuxeo-validation>none</nuxeo-validation>
  <production-state>testing</production-state>
  <installer restart="true" />
  <uninstaller restart="true" />
  <platforms>
    <platform>server-@DISTRIB_VERSION@</platform>
    <platform>server-@DISTRIB_VERSION@-HF*</platform>
  </platforms>
  <dependencies>
  </dependencies>
  <license>Apache License, Version 2.0</license>
  <license-url>http://www.apache.org/licenses/LICENSE-2.0</license-url>
  <visibility>PUBLIC</visibility>
</package>
